        "script": [
            "Start-Process -Wait -WindowStyle Hidden cmd \"/c call `\"$dir\\scilab-6.0.2.exe`\" --msiparams INSTALLDIR=`\"$dir`\" REBOOT=ReallySuppress --silent && icacls `\"$dir`\" /grant Everyone:F /T\""
